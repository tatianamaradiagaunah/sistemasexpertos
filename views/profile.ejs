<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link rel="shortcut icon" href="../public/img/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="../public/css/dashboard.css">
    <style type="text/css">
        textarea,
        iframe {
            display: block;
            margin: 15px 0;
        }
        
        iframe {
            width: 650px;
            border: 1px solid #a9a9a9;
        }
    </style>
    <title>codiGo</title>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-md navbar-light encabezado bg-dark sticky-top">
        <div class="container-fluid">
            <a href="#" class="navbar-brand text1">
                <strong>codi</strong>
                <img src="../public/img/favicon.png" height="38px" width="38px">
                <strong>Go</strong>
            </a>
            <button style="background-color: rgb(7, 7, 7); margin-left: auto;" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <form class="form-inline">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="Buscar" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </form>
                    </li>
                    <li class="nav-item active">
                        <a href="/" class="nav-link text-white">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white">Soporte</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white">Ayuda</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout" class="nav-link text-white">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- dashboard -->

    <div class="container-fluid">
        <div class="row">
            <nav class="col-xs-12 col-sm-12 col-md-2 col-lg-3 col-xl-3 bg-secondary p-1 border-right">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item active">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-building"></i> Proyecto
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/profile" class="nav-link text-light">
                                <i class="fas fa-user"></i> Perfil de usuario
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-chalkboard-teacher"></i> Reclamar sitio web
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-cogs"></i> Configuracion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/plan" class="nav-link text-light">
                                <i class="fas fa-shopping-cart"></i> Comprar plan
                            </a>
                        </li>
                        <!-- <li class="nav-item">
                    <a href="#" class="nav-link text-light">
                      <i class="fas fa-list-alt"></i> Listado de choferes
                    </a>
                  </li> -->
                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-money-check"></i> Estado de cuenta
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-xs-12 col-sm-12 col-md-10 col-lg-9 col-xl-9 bg-light mh-100 p-5">
                <div id="perfilEmpresa" class="container">
                    <div class="col align-self-center">
                        <h3>Perfil del Usuario</h3>
                        <br>
                        <div class="media">
                            <h1>
                                <%= user.username %>
                            </h1>
                        </div>
                        <br>
                        <h3>Foto</h3><br>
                        <div class="media">
                            <img class="mr-3 rounded-circle img-fluid" src="../public/img/empresa.svg" height="150px" width="150px">
                            <div class="media-body" style="margin: 2.5rem 0rem 2.5rem 5rem;">
                                <button type="button" class="btn btn-primary" name="Cambiar Foto" style="margin: 1rem">Cambiar Foto</button>
                                <button type="button" class="btn btn-danger" style="margin: 1rem">Cambiar Configuracion</button>
                            </div>
                        </div><br>
                        <h4 class="mt-0 ml-2">Nombre de Usuario</h4>
                        <p class="ml-2">
                            <div class="media">
                                <span style="padding: 0.5rem"></span>
                                <h3>www.codiGo.com/
                                    <%= user.username %>
                                </h3>
                                <!-- <input type="text"class="form-control" placeholder="ejemplo" style="pointer-events:none; width: 200px"> -->
                            </div>
                        </p><br>
                        <h3 class="mt-0 ml-2">Acerca de tí</h3>
                        <p class="ml-2">
                            <%= user.acerca %>
                                <!-- Esta es la parte que jala la info -->
                        </p><br>
                        <h3 class="mt-0 ml-2">Ubicación</h3>
                        <p class="ml-2">
                            <%= user.ubicacion %>
                                <!-- Esta es la parte que jala la info -->
                        </p>
                    </div>
                </div>
            </main>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="../public/js/dashboard.js"></script>
</body>

</html>